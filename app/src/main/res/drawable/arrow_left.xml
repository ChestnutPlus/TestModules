<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--制定布局大小-->
    <item>
        <shape android:shape="rectangle">
            <size android:width="45dp" android:height="40dp"/>
            <corners android:radius="1dp"/>
            <solid android:color="#34e7a9a9"/>
        </shape>
    </item>

    <!--上-->
    <item android:bottom="9.5dp" android:top="25.5dp" android:left="17dp">
        <rotate android:fromDegrees="-45" android:toDegrees="-45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/title_white"/>
                <corners android:radius="4dp"/>
            </shape>
        </rotate>
    </item>

    <!--下-->
    <item android:bottom="26.5dp" android:top="8.5dp" android:left="17dp">
        <rotate android:fromDegrees="45" android:toDegrees="45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/title_white"/>
                <corners android:radius="4dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>